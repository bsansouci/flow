      "slow-re": "*",
      "excludes": [
        "flow.ml",
        "flow_dot_js.ml"
      ],
    },
    "subdirs": [{"dir": "parser", "subdirs": [{"dir": "js", "kind": "js"}]}, "stubs", {
      "dir": "common",
